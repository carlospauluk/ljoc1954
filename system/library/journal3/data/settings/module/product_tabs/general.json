{
  "title": {
    "type": "InputLang",
    "php": true
  },
  "sort": {
    "type": "InputNumber",
    "php": true
  },
  "contentType": {
    "type": "Radio",
    "value": "html",
    "php": true
  },
  "content": {
    "type": "InputLang"
  },
  "shortDescriptionLimit": {
    "type": "Input",
    "value": "150",
    "php": true
  },
  "dynamic": {
    "type": "Input",
    "value": "journal3/blocks_example",
    "php": true
  },
  "contentWidgetHeight": {
    "type": "Input",
    "selector": ".product_tabs-%s .block-content:not(.block-html):not(.block-text)",
    "property": "height: %spx"
  },
  "contentPadding": {
    "type": "Padding",
    "selector": ".product_tabs-%s .block-content"
  },
  "contentBG": {
    "type": "Background",
    "selector": ".product_tabs-%s .block-content"
  },
  "contentBGHover": {
    "type": "Background",
    "selector": ".product_tabs-%s .block-body:hover .block-content"
  },
  "contentBorder": {
    "type": "Border",
    "selector": ".product_tabs-%s .block-content"
  },
  "contentBorderHover2": {
    "type": "Color",
    "selector": ".product_tabs-%s .block-body:hover .block-content",
    "property": "border-color"
  },
  "contentShadow": {
    "type": "Shadow",
    "selector": ".product_tabs-%s .block-content"
  },
  "contentShadowHover": {
    "type": "Shadow",
    "selector": ".product_tabs-%s .block-body:hover .block-content"
  },
  "contentBorderRadius": {
    "type": "BorderRadius",
    "selector": ".product_tabs-%s .block-content"
  },
  "contentTypography": {
    "type": "Variable",
    "variable": "typography",
    "selector_prefix": ".product_tabs-%s .block-content"
  },
  "itemContentWidth": {
    "type": "InputNumber",
    "rules": {
      "@": {
        ".product_tabs-%s .block-body": "max-width:%spx"
      }
    }
  },
  "contentAlign": {
    "type": "Radio",
    "value": "",
    "rules": {
      "left": {
        ".product_tabs-%s .block-content": "text-align:left"
      },
      "center": {
        ".product_tabs-%s .block-content": "text-align:center"
      },
      "right": {
        ".product_tabs-%s .block-content": "text-align:right"
      }
    },
    "rtlRules": {
      "left": {
        ".product_tabs-%s .block-content": "text-align:right"
      },
      "center": {
        ".product_tabs-%s .block-content": "text-align:center"
      },
      "right": {
        ".product_tabs-%s .block-content": "text-align:left"
      }
    }
  },
  "expandButton": {
    "type": "Toggle",
    "value": "false",
    "rules": {
      "true": {
        ".product_tabs-%s .expand-content": "overflow:hidden"
      },
      "false": {
        ".product_tabs-%s .expand-content": "max-height:100%; overflow:visible"
      }
    },
    "php": true
  },
  "expandHeight": {
    "type": "InputNumber",
    "value": "70",
    "rules": {
      "@": {
        ".product_tabs-%s .expand-content": "max-height:%spx"
      }
    }
  },
  "expandButtonStyle": {
    "type": "Variable",
    "variable": "button",
    "selector_prefix": ".product_tabs-%s .block-expand&"
  },
  "expandButtonText": {
    "type": "InputLang",
    "selector": ".product_tabs-%s .block-expand::after",
    "property": "content:'%s'"
  },
  "expandButtonTextLess": {
    "type": "InputLang",
    "selector": ".product_tabs-%s .block-expanded .block-expand::after",
    "property": "content:'%s'"
  },
  "expandIcon": {
    "type": "Icon",
    "selector": ".product_tabs-%s .block-expand::before"
  },
  "expandIconHover": {
    "type": "Color",
    "selector": ".product_tabs-%s .block-expand:hover::before",
    "property": "color",
    "desktop": true
  },
  "expandIconUp": {
    "type": "Icon",
    "selector": ".product_tabs-%s .block-expanded .block-expand::before"
  },
  "expandIconHoverUp": {
    "type": "Color",
    "selector": ".product_tabs-%s .block-expanded .block-expand:hover::before",
    "property": "color",
    "desktop": true
  },
  "expandOverlayColor": {
    "type": "Color",
    "rules": {
      "@": {
        ".product_tabs-%s .block-expand-overlay": "background: linear-gradient(to bottom, transparent, %s)",
        ".safari .product_tabs-%s .block-expand-overlay": "background: linear-gradient(to bottom, rgba(255,255,255,0), %s)",
        ".iphone .product_tabs-%s .block-expand-overlay": "background: linear-gradient(to bottom, rgba(255,255,255,0), %s)",
        ".ipad .product_tabs-%s .block-expand-overlay": "background: linear-gradient(to bottom, rgba(255,255,255,0), %s)"
      }
    }
  },
  "blocksColumns": {
    "type": "Radio",
    "value": "initial",
    "selector": ".product_tabs-%s .block-content",
    "property": "column-count:%s"
  },
  "blocksColumnGap": {
    "type": "InputNumber",
    "selector": ".product_tabs-%s .block-content",
    "property": "column-gap:%spx",
    "value": "20"
  },
  "blocksColumnDividerColor": {
    "type": "Color",
    "selector": ".product_tabs-%s .block-content",
    "property": "column-rule-color"
  },
  "blocksColumnDividerWidth": {
    "type": "InputNumber",
    "selector": ".product_tabs-%s .block-content",
    "property": "column-rule-width:%spx",
    "value": "1"
  },
  "blocksColumnDividerStyle": {
    "type": "Select",
    "selector": ".product_tabs-%s .block-content",
    "property": "column-rule-style",
    "value": "solid"
  },
  "itemBoxStyles": {
    "include": "common_hover",
    "selector_prefix": ".product_tabs-%s .block-body"
  }
}
